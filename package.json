{
  "name": "shopify-collections-bot",
  "version": "1.0.0",
  "description": "Shopify collections and menus automation",
  "type": "module",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "build": "tsc",
    "wyn:tag-audit": "npx tsx src/cli/wyn-tag-audit.ts",
    "wyn:sync-collections": "npx tsx src/cli/wyn-sync-collections.ts",
    "wyn:sync-menus": "npx tsx src/cli/wyn-sync-menus.ts",
    "wyn:menu-audit": "npx tsx src/cli/wyn-menu-audit.ts",
    "wyn:seo-safe-sync": "npx tsx src/cli/wyn-seo-safe-sync.ts",
    "oilslick:preview": "npx tsx src/cli/wyn-seo-safe-sync.ts --config oilslick",
    "oilslick:deploy": "npx tsx src/cli/wyn-seo-safe-sync.ts --config oilslick --apply --publish",
    "ai": "npx tsx src/cli/ai-assistant.ts",
    "ai:suggest-collections": "npx tsx src/cli/ai-assistant.ts suggest-collections",
    "ai:seo": "npx tsx src/cli/ai-assistant.ts generate-seo",
    "ai:audit-seo": "npx tsx src/cli/ai-assistant.ts audit-seo",
    "ai:optimize-menu": "npx tsx src/cli/ai-assistant.ts optimize-menu",
    "ai:suggest-tags": "npx tsx src/cli/ai-assistant.ts suggest-tags",
    "ai:ask": "npx tsx src/cli/ai-assistant.ts ask",
    "auto": "npx tsx src/cli/auto-optimize.ts --config oilslick",
    "auto:preview": "npx tsx src/cli/auto-optimize.ts --config oilslick --verbose",
    "auto:deploy": "npx tsx src/cli/auto-optimize.ts --config oilslick --apply --publish --verbose",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:61887/git/Yoshi420247/shopify-collections-bot"
  },
  "keywords": [
    "shopify",
    "collections",
    "menus",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6"
  }
}
